div(ng-include='"components/navbar/navbar.html"')
.container-fluid
  .row
    .col-md-1.col-centered(style='width:69%')
      h3(style='margin-top: 0px; margin-bottom: 10px') Lecture : {{lectureId}}
    .col-md-8.col-centered(style='width:30%')
      div
        button.btn.btn-primary#prev(ng-click='onPrevPage()') Previous
        button.btn.btn-primary#next(ng-click='onNextPage()') Next
        span
          |  Page: 
          span#page_num
          |  / 
          span#page_count
          |   - 
        form(style="display:inline")
          input(type='checkbox', ng-click='toggleSync()' checked)
          |  Sync slides 
  .row
    .col-md-1.col-centered(style='width:70%; padding-left: 0px;padding-right: 5px; ')
      canvas#the-canvas(style='border:1px solid black; height:100%; width:100%; display:block')
    .col-md-1.col-centered(style='width:30%')
      .row
        h3(style='margin-top: 0px;') Chat
        div#msgWrapper(style='height:300px; width:100%; overflow-y: scroll; overflow-x: hidden;')
          .row.no-glutter(ng-repeat='chat in chatMessages')
            hr
            .col-md-1.col-centered(style='width:25%') {{chat.time}}
            .col-md-1.col-centered(style='width:25%') {{chat.author}}
            .col-md-1.col-centered(style='width:50%') {{chat.content}} 
        #chatContent
        hr
        form
          p.input-group
            input.form-control(type='text', placeholder='Write your message', ng-model='newMessage')
            span.input-group-btn
              button.btn.btn-primary(type='submit', ng-click='addMessage()') Send
      .row
        .col-centered
          h3(style='margin-top: 0px;') Mood
          .row(style='margin-top:10px')
            .col-md-6.col-centered
                button.btn.btn-primary(style='width:100%') speed up !
            .col-md-6.col-centered
                button.btn.btn-primary(style='width:100%') I am lost...
          .row(style='margin-top:10px')
            .col-md-6.col-centered
                button.btn.btn-primary(style='width:100%') slow down !
            .col-md-6.col-centered
                button.btn.btn-primary(style='width:100%') Cool
          
