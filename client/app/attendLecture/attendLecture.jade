div
.container-fluid  
  .row
    .col-md-1.col-centered.fill.left
      canvas#the-canvas
    .col-md-1.col-centered.right
      .row
          h3 Lecture code : {{lectureUserFriendlyId}}
      .row
          div
            button.btn.btn-primary#prev(ng-click='onPrevPage()') Previous
            button.btn.btn-primary#next(ng-click='onNextPage()') Next
            span
              |  Page: 
              span#page_num
              |  / 
              span#page_count
              |   - 
            form
              input(type='checkbox', ng-click='toggleSync()' checked)
              |  Sync slides 
      hr
      .row
        h3 Chat
        div#msgWrapperStudent
          .row.no-glutter(ng-repeat='chat in chatMessages')
            hr
            .col-md-1.col-centered.col1on3 {{chat.time}}
            .col-md-1.col-centered.col2on3 {{chat.author}}
            .col-md-1.col-centered.col3on3 {{chat.content}} 
        #chatContent
        hr
        form
          p.input-group
            input.form-control(type='text', placeholder='Write your message', ng-model='newMessage')
            span.input-group-btn
              button.btn.btn-primary(type='submit', ng-click='addMessage()') Send
      .row
        .col-centered
          h3.mood Mood
          .row.rowMood
            .col-md-6.col-centered
                button.btn.btn-primary.buttonMood(ng-click='addMoodMessage(\'speed up !\')') speed up !
            .col-md-6.col-centered
                button.btn.btn-primary.buttonMood(ng-click='addMoodMessage(\'I am lost !\')') I am lost...
          .row.rowMood
            .col-md-6.col-centered
                button.btn.btn-primary.buttonMood(ng-click='addMoodMessage(\'slow down !\')') slow down !
            .col-md-6.col-centered
                button.btn.btn-primary.buttonMood(ng-click='addMoodMessage(\'cool !\')') Cool
          
