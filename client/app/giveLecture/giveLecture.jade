div
.container-fluid  
  .row.no-gutter
    .col-md-9.col-centered.fill.left
      canvas#the-canvas
    .col-md-3.col-centered.right
      .row
            h3 Lecture : {{lectureUserFriendlyId}}
      .row
          button.btn.btn-primary#prev(ng-click='onPrevPage()') Previous
          button.btn.btn-primary#next(ng-click='onNextPage()') Next
          span
            |  Page: 
            span#page_num
            |  / 
            span#page_count
      hr
      .row.no-gutter
        h3 Chat
        div#msgWrapper
          .row.no-glutter(ng-repeat='chat in chatMessages')
            hr
            .col-md-1.col-centered.col1on3 {{chat.time}}
            .col-md-1.col-centered.col1on3 {{chat.author}}
            .col-md-1.col-centered.col1on3 {{chat.content}} 
        #chatContent